class Solution {
    public int subarraysDivByK(int[] nums, int k) {
        int n = nums.length; // size of the given array
        int cnt = 0; // Number of subarrays

        // Loop through each starting index
        for (int i = 0; i < n; i++) {
            int sum = 0; // Reset sum for each starting index
            
            // Loop through each ending index
            for (int j = i; j < n; j++) {
                // Calculate the sum of subarray [i...j]
                sum += nums[j];

                // Increase the count if the sum is divisible by k
                if (sum % k == 0) {
                    cnt++;
                }
            }
        }
        return cnt;
    }
}
