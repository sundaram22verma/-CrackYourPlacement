class Solution {
    public int maxProfit(int[] prices) {
        if (prices == null || prices.length == 0) {
            return 0;
        }

        int mini = prices[0];
        int profit = 0;

        for (int i = 1; i < prices.length; i++) {  // Start from 1 because min is already set to prices[0]
            int diff = prices[i] - mini;
            profit = Math.max(diff, profit); //for updating the Profit
            min = Math.min(mini, prices[i]);  //for updating the min
        }
        return profit;
    }
}
