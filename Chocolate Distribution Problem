class Solution
{
    public long findMinDiff (ArrayList<Integer> a, int n, int m)
    {
        // your code here
        Collections.sort(a);
        
        long min_diff = Long.MAX_VALUE;
        for(int i=0 ; i+m-1 < n ; i++){
            
            long diff = a.get(i+m-1) - a.get(i);
            
            if(diff<min_diff){
                min_diff = diff;
            }
        }
        return min_diff;
        
    }
}
